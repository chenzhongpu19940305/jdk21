<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.VideoMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.Video">
        <id     column="id"            property="id"           jdbcType="BIGINT"/>
        <result column="title"         property="title"        jdbcType="VARCHAR"/>
        <result column="description"   property="description"  jdbcType="VARCHAR"/>
        <result column="file_name"     property="fileName"     jdbcType="VARCHAR"/>
        <result column="file_url"      property="fileUrl"      jdbcType="VARCHAR"/>
        <result column="cover_url"     property="coverUrl"     jdbcType="VARCHAR"/>
        <result column="user_id"       property="userId"       jdbcType="BIGINT"/>
        <result column="view_count"    property="viewCount"    jdbcType="INTEGER"/>
        <result column="like_count"    property="likeCount"    jdbcType="INTEGER"/>
        <result column="comment_count" property="commentCount" jdbcType="INTEGER"/>
        <result column="status"        property="status"       jdbcType="INTEGER"/>
        <result column="create_time"   property="createTime"   jdbcType="TIMESTAMP"/>
        <result column="update_time"   property="updateTime"   jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT *
        FROM t_video
        WHERE id = #{id}
    </select>

    <select id="selectPage" resultMap="BaseResultMap">
        SELECT *
        FROM t_video
        <where>
            <if test="keyword != null and keyword != ''">
                (title LIKE CONCAT('%', #{keyword}, '%')
                 OR description LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            AND status = 1
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <insert id="insert" parameterType="com.example.demo.entity.Video" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_video (
            title, description, file_name, file_url, cover_url,
            user_id, view_count, like_count, comment_count, status,
            create_time, update_time
        ) VALUES (
            #{title}, #{description}, #{fileName}, #{fileUrl}, #{coverUrl},
            #{userId}, #{viewCount}, #{likeCount}, #{commentCount}, #{status},
            #{createTime}, #{updateTime}
        )
    </insert>

    <update id="update" parameterType="com.example.demo.entity.Video">
        UPDATE t_video
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="fileUrl != null">file_url = #{fileUrl},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE t_video
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM t_video WHERE id = #{id}
    </delete>

</mapper>
